<div class="title">
  <h2>Welcome {{user.firstName}} {{user.surName}}</h2>
  <blockquote>{{showQuote}}</blockquote>
</div>

<div class="full job-list">

  {{#each jobs}}
  <div class="card dash" id="{{id}}">
    <figure>
      <img src="//logo.clearbit.com/{{job.data.logoUrl}}" alt="placeholder" onerror="this.src='/images/placeholder.png'">
    </figure>

    <div class="info">
      <h2>{{job.data.title}}</h2>
      <h4>{{job.data.company.name}}</h4>

      <p class="status" id="id-{{id}}">
        <span status="0">Interested</span>
        <span status="1">Applied</span>
        <span status="2">On Going</span>
        <span status="3">Unsuccessful</span>
        <span status="4">Not interested anymore</span>
      </p>
    </div>

    <div class="controls">
      <a href="/position/{{job.id.companySlug}}/{{job.id.slug}}">View job</a>
      <a>Notes</a>
      <a class='addRemoveBtn' action='remove' jobId='{{id}}' slug='{{job.id.slug}}' companySlug='{{job.id.companySlug}}'>Remove</a>
    </div>
  </div>
  {{/each}}
  {{> footer}}
</div>
<script src="/javascripts/dashboard.js"></script>